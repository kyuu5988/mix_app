%h2 ユーザーログイン

.notice
  = notice#コントローラーからのメッセージ
.alert
  = alert#deviseのメッセージ有


= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  
  .field
    = f.label :メールアドレス
    %br/
    = f.email_field :email, class:"", id:"", autofocus: true, autocomplete: "email"
  
  .field
    = f.label :パスワード
    %br/
    = f.password_field :password, class:"", id:"", placeholder:"8文字以上", autocomplete: "current-password"
  
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :ログインしたままにする
  .actions
    = f.submit "ログイン"

%br/
= link_to "パスワードを忘れた", new_password_path(resource_name), class: "menu_btn"
= link_to "新規登録時の認証メール再送信", new_confirmation_path(resource_name), class: "menu_btn"

/devise初期設定
/= render "devise/shared/links"
